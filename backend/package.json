{
  "name": "backend",
  "version": "0.1.0",
  "description": "A simple admin panel backend",
  "main": "src/index.ts",
  "license": "no license",
  "private": true,
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "^2.0.12",
    "uuid": "^8.3.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "^29.2.3",
    "@types/node": "16.11.26",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "jest": "^29.3.1",
    "prettier": "2.7.1",
    "prisma": "^4.5.0",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "scripts": {
    "start": "nodemon",
    "test": "jest --config ./jest.config.js --detectOpenHandles",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
